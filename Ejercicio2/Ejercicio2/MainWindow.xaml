<Window x:Name="mainWindow" x:Class="Ejercicio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio2"
        mc:Ignorable="d"
        Title="Mantenimiento de biblioteca" Height="250" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="librosButton" Content="Libros" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="94" Height="44" Click="librosButton_Click" Grid.Row="0"/>
        <Button x:Name="sociosButton" Content="Socios" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="94" Height="44" Click="sociosButton_Click" Grid.Row="1"/>
        <Button x:Name="prestamosButton" Content="Prestamos" HorizontalAlignment="Center" Margin="5" VerticalAlignment="Center" Width="94" Height="44" Click="prestamosButton_Click" Grid.Row="2"/>

    </Grid>
</Window>
